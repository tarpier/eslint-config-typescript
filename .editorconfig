root = true

[*]
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js,json}]
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[.{gitignore,eslintrc,eslintignore,prettierrc,prettierignore}]
insert_final_newline = false

[{jest,package,tsconfig}.json]
insert_final_newline = false
